<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
        {% block stylesheets %}
        
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href={{path('home')}}>Logo</a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href={{path('hello', {name:'macky'})}}>Hello</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href={{path('post.index')}}>Post</a>
                    </li>
                </ul>
            </div>
            <div class="float-end">
                <ul class="navbar-nav">
                
                    {% if app.user %}
                        <li class="nav-item">
                            <p>Hello {{ app.user.userIdentifier }}</p>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href={{path('app_logout')}}>Logout</a>
                        </li>

                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href={{path('login')}}>Login</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href={{path('register')}}>Register</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
    <div class="container m-5">
        {% block body %}{% endblock %}
    </div>
        
    </body>
</html>
